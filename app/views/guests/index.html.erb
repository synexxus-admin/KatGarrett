<h1>Listing guests</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Plus one</th>
    <th>Plus guest first name</th>
    <th>Plus guest last name</th>
    <th>Guest rsvp</th>
    <th>Plus guest rsvp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @guests.each do |guest| %>
  <tr>
    <td><%= guest.first_name %></td>
    <td><%= guest.last_name %></td>
    <td><%= guest.email %></td>
    <td><%= guest.plus_one %></td>
    <td><%= guest.plus_guest_first_name %></td>
    <td><%= guest.plus_guest_last_name %></td>
    <td><%= guest.guest_rsvp %></td>
    <td><%= guest.plus_guest_rsvp %></td>
    <td><%= link_to 'Show', guest %></td>
    <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
    <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

